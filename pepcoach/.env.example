# Copia a .env y rellena valores reales.

# Backend env (copia a .env)
PORT=4000

# Google Sheets (service account JSON en base64) OR ruta al JSON
GOOGLE_SERVICE_ACCOUNT_JSON_BASE64=REEMPLAZA_CON_BASE64_DEL_JSON_DEL_SERVICE_ACCOUNT

# Alternativa: GOOGLE_CREDS_PATH=/path/to/credentials.json
# ID de la Google Sheet (la hoja debe tener pestaña "Clientes" con encabezados)
SHEET_ID=REEMPLAZA_CON_TU_SHEET_ID

# SendGrid
SENDGRID_API_KEY=SG_XXXXXXXXXXXX
SENDGRID_FROM=tu@dominio.com

# Gemini / Generative API key (Google / OpenAI) — proxy en backend
GEMINI_API_KEY=REEMPLAZA_CON_TU_API_KEY

# URL pública del frontend (opcional — para links)
FRONTEND_URL=http://localhost
